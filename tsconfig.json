{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "CommonJS",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,

    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "server/src/**/*.ts",
    "shared/**/*.ts",
    "web/src/**/*.tsx"
  ]
}